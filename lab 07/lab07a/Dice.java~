// header comment
public class Dice
{
   // properties
   int die1Face;
   int die2Face;

   Die die1 = new Die();
   Die die2 = new Die();

   // constructors

   public int roll()
   {
      die1Face = die1.roll();
      die2Face = die2.roll();
      return die1Face + die2Face;
   }

   public int getDie1FaceValue()
   {
      return die1Face;
   }

   public int getDie2FaceValue()
   {
      return die2Face;
   }

   public int getDiceTotal()
   {
      return die1Face + die2Face;
   }

   public String toString()
   {
      return "" + roll() + " " + getDie1FaceValue() + " " + getDie2FaceValue() + " " + getDiceTotal();
   }

   // methods
}